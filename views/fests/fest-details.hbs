{{> eachFest}}

<p>Overall Review: {{review}}</p>
<p>Favorite Set: {{favSet}}</p>

{{!-- NEED TO ADD REVIEW AND FAVORITE SET SOMEHOW --}}
<a  href="/fests/edit/{{_id}}"><button class="see-details-text">Edit</button></a>
<a  href="/fests/delete/{{_id}}"><button class="see-details-text">Delete</button></a>
    <br>
    <br>

<form action="/fests/add-comment/{{_id}}" method="post">
    <label for="">Comments</label>
        <br>
        <br>
    <input type="text" name="comment" style="border-radius: 10px; color: #FD7F31; border: 2px solid #FD7F31; background-color: #FDD598;">
    <button class="see-details-text" type="submit">Add Comment</button>
        <br>
        <br>
</form>

{{#if comments}}
    <ul>
        {{#each comments}}
            <li>
                <p>{{comment}}</p>
                <h4>- <a class="posted-by-tag" href="/users/profile/{{user._id}}">{{user.username}}</a></h4>
                <a  href="/fests/delete-comment/{{_id}}"><button class="see-details-text">Delete Comment</button></a>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>No comments yet</p>
{{/if}}